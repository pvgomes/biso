<phpunit colors="false" bootstrap="vendor/autoload.php">
    <testsuites>
        <testsuite name="Biso Test Suite">
            <directory suffix="Test.php">./src/Tests/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./src/Domain</directory>
            <exclude>
                <directory>./vendor</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
